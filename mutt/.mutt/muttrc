set include
set auto_tag = yes
set pgp_autosign = no
set query_command="goobook query '%s'"

set nm_default_uri = "notmuch:///home/neg/.local/mail/insales"
virtual-mailboxes "Neg INBOX" "notmuch://?query=tag:inbox"
set virtual_spoolfile = yes

auto_view text/html
