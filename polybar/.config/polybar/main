[section/base]
include-file = $XDG_CONFIG_HOME/polybar/common.cfg

[global/wm]
monitor =
monitor-fallback =
monitor-strict = false
margin-bottom = 0
margin-top = 0

wm-restack = i3

[settings]
; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = false

compositing-background = over
compositing-foreground = lighten
compositing-overline = lighten
compositing-underline = lighten
compositing-border = lighten

# Define fallback values used by all module formats
format-foreground = 
format-background = 
format-underline =
format-overline =
format-spacing =
format-padding =
format-margin =
format-offset =

; The throttle settings lets the eventloop swallow up til X events
; if they happen within Y millisecond after first event was received.
; This is done to prevent flood of update event.
;
; For example if 5 modules emit an update event at the same time, we really
; just care about the last one. But if we wait too long for events to swallow
; the bar would appear sluggish so we continue if timeout
; expires or limit is reached.
throttle-output = 5
throttle-output-for = 10

; Time in milliseconds that the input handler will wait between processing events
throttle-input-for = 30

[bar/main]
; Tell the Window Manager not to configure the window.
; Use this to detach the bar if your WM is locking its size/position.
override-redirect = false

; Prefer fixed center position for the `modules-center` block
; When false, the center position will be based on the size of the other blocks.
fixed-center = true

bottom=true

border-top-size = 1
border-bottom-size = 1
border-left-size = 1
border-right-size = 1
border-top-color = ${colors.border_top}
border-bottom-color = ${colors.border_top}
border-left-color = ${colors.border_top}
border-right-color = ${colors.border_top}

width = 100%
height = 27

enable-ipc = true

padding = 0
offset-x = 0%
offset-y = 0%
separator =

radius-top = 0.0
radius-bottom = 0.0

overline-size = 2
overline-color = ${color.ac}

module-margin-right = 0 # looks nice
module-margin-left  = 0 # looks nice
modules-left = START time right-end-top left-end-bottom START_DARK ws right-end-top left-end-bottom START_BR xkeyboard right-end-top left-end-bottom START_BR networkenp6s0  right-end-top 
modules-center =
modules-right = left-end-top-full START_MPD mpd volume vol2

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2

; Opacity value between 0.0 and 1.0 used on fade in/out
dim-value = 1.0

; Locale used to localize various module data (e.g. date)
; Expects a valid libc locale, for example: sv_SE.UTF-8
locale = 

; Value to be used to set the WM_NAME atom
; If the value is empty or undefined, the atom value
; will be created from the following template: polybar-[BAR]_[MONITOR]
; NOTE: The placeholders are not available for custom values
wm-name = 

tray-padding = 1.0
tray-scale = 1.0
tray-background = ${colors.background}
tray-position = right
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = 16
tray-detached = false
# tray-position = none

; Fallback click handlers that will be called if
; there's no matching module handler found.
click-left = 
click-middle = 
click-right =
scroll-up =
scroll-down =
double-click-left =
double-click-middle =
double-click-right =

; Requires polybar to be built with xcursor support (xcb-util-cursor)
; Possible values are:
; - default   : The default pointer as before, can also be an empty string (default)
; - pointer   : Typically in the form of a hand
; - ns-resize : Up and down arrows, can be used to indicate scrolling
cursor-click = 
cursor-scroll = 

font-0 = ${font.font-0}
font-1 = ${font.font-1}
font-2 = ${font.font-2}
font-3 = ${font.font-3}
font-4 = ${font.font-4}
font-5 = ${font.font-5}
font-6 = ${font.font-6}

[layout]
module-padding = 1

;; Bars
icon-font = 2
;bar-format = %{T4}%fill%%indicator%%{F#dc404040}%empty%%{F-}%{T-}
bar-format = %{T4}%fill%%indicator%%empty%%{F-}%{T-}
bar-fill-icon = ﭳ

[module/ws]
type = custom/script
exec = ${XDG_CONFIG_HOME}/i3/proc/polybar_ws.py 2> /dev/null
exec-if = sleep 1
format-background = ${color.mgf}
format = <label>
tail = true

[module/mpd]
type = internal/mpd
format-online = ${env:POLYBAR_MPD_FORMAT_ONLINE}
format-playing = ${self.format-online}
format-playing-prefix = ${self.lmpd}
format-playing-suffix = ${c.rs}
format-paused = ${env:POLYBAR_MPD_FORMAT_PAUSED}
format-paused-suffix = ${c.rs}
format-stopped =
format-offline = ${env:POLYBAR_MPD_OFFLINE}
label-song = %artist% ― %title%
label-time = ${env:POLYBAR_MPD_SONG_TIME}
lmpd=${env:POLYBAR_MPD_LEFT_SIDE}
format-online-background = ${color.mgf}
format-offline-background = ${color.mgf}
host = ::1
port = 6600
interval = 1

[module/LL]
type=custom/text
content=${env:POLYBAR_LL}

[module/RR]
type=custom/text
content=${env:POLYBAR_RR}

[module/volume]
type = custom/script
interval = 0
format-background = ${color.mgf}
exec = ${XDG_CONFIG_HOME}/i3/proc/polybar_vol.py 2> /dev/null
exec-if = sleep 1
tail = true

[module/time]
type = internal/date
date = %H:%M%
interval = 5
format-background = ${color.mgf}

[module/decor-glyph]
type = custom/text
content-background = ${colors.background}
