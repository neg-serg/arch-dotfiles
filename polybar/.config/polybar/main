[section/base]
include-file = $XDG_CONFIG_HOME/polybar/common.cfg

[global/wm]
wm-restack = i3
override-redirect = true
monitor-strict = false

[settings]
screenchange-reload = true

[bar/main]
bottom=true

border-top-size = 2
border-top-color = ${colors.border_top}

height = 32
spacing = 0
width = 100%
enable-ipc = true

padding-left  = 0       # offset from x
padding-right = 0       # offset from -x

module-margin-right = 0 # looks nice
module-margin-left  = 0 # looks nice
modules-left = LL time ws xkeyboard networkenp6s0 RR
modules-center =
modules-right = mpd volume vol2

background = ${colors.background}
foreground = ${colors.foreground}

underline-size = 2

tray-position = right
tray-padding = 1
tray-background = ${colors.background}

font-0 = ${font.font-0}
font-1 = ${font.font-1}
font-2 = ${font.font-2}

compositing-background = over
compositing-foreground = lighten
compositing-overline = lighten
compositing-underline = lighten
compositing-border = lighten

[module/ws]
type = custom/script
exec = ${XDG_CONFIG_HOME}/i3/proc/ws_printer.py 2> /dev/null
exec-if = sleep 1
format-prefix=${c.l}
format-suffix=${c.delim}
format = <label>
tail = true

[module/mpd]
type = internal/mpd
format-online = ${env:POLYBAR_MPD_FORMAT_ONLINE}
format-playing = ${self.format-online}
format-playing-prefix = ${self.lmpd}
format-playing-suffix = ${c.rs}
format-paused = ${env:POLYBAR_MPD_FORMAT_PAUSED}
format-paused-suffix = ${c.rs}
format-stopped =
format-offline = ${env:POLYBAR_MPD_OFFLINE}
label-song = %artist% ― %title%
label-time = ${env:POLYBAR_MPD_SONG_TIME}
lmpd=${env:POLYBAR_MPD_LEFT_SIDE}
host = ::1
port = 6600
interval = 1

[module/LL]
type=custom/text
content=${env:POLYBAR_LL}

[module/RR]
type=custom/text
content=${env:POLYBAR_RR}

[module/volume]
type = custom/script
interval = 0
exec = ${XDG_CONFIG_HOME}/i3/proc/vol_printer.py 2> /dev/null
exec-if = sleep 1
tail = true

[module/time]
type = internal/date
format-prefix=${c.l}
format-suffix=${c.delim}
date = %H:%M%
interval = 5
format-padding = 0

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
format-prefix = ${c.l}
format-suffix = ${c.delim}
label-layout = ${env:POLYBAR_INPUT_FORMAT}
label-indicator-padding = 0
label-indicator-background = ${colors.background}
label-indicator-underline = ${colors.background}

[module/networkenp6s0]
type = internal/network
interface = enp6s0
interval = 1.0
accumulate-stats = false # Accumulate values from all interfaces
ping-interval = 60.0
label-connected = eth:%{O5}%downspeed%%{F#395573}/%{F#ccc}%upspeed%
format-connected-prefix=${c.l}
format-connected-suffix=${c.rs}

[module/networkenp7s0]
type = internal/network
interface = enp7s0
interval = 1.0
accumulate-stats = false # Accumulate values from all interfaces
ping-interval = 60.0
label-connected = eth:%{O5}%downspeed%%{F#395573}/%{F#ccc}%upspeed%
format-connected-prefix=${c.l}
format-connected-suffix=${c.rs}

[module/gmail]
type = custom/script
exec = ${XDG_CONFIG_HOME}/polybar/gmail/launch.py -p 'mail:'
tail = true
click-left = xdg-open https://mail.google.com
format-prefix=${c.deliml}
format = <label>

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 95
time-format = %Hh:%Mm

format-full-foreground = ${colors.background}
format-charging-foreground = ${colors.background}
format-discharging-foreground = ${colors.background}
format-charging = <animation-charging>
format-discharging = <ramp-capacity>
format-full = <label-full>

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 
label-full = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-5 = 
animation-charging-6 = 
animation-charging-7 = 
animation-charging-8 = 
animation-charging-9 = 

; Framerate in milliseconds
animation-charging-framerate = 500
poll-interval = 5

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp>
format-padding = 1
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

[module/temperature]
type = internal/temperature
label = %temperature-c%
format = <ramp> <label>
thermal-zone = 0
warn-temperature = 100
ramp-foreground = ${colors.red}
ramp-0 = 
ramp-1 = 
ramp-2 = 
interval = 5

[module/cpu]
type = internal/cpu
label = %percentage:3%%
format-prefix = " "
format-prefix-foreground = ${colors.blue}
format-padding = 1
interval = 0.5

[module/memory]
type = internal/memory
label = %percentage_used%%
format-prefix = " "
format-prefix-foreground = ${colors.green}
format-padding = 1
interval = 5

[module/wifi-alt]
type = custom/script
exec = "$USERSCRIPT/wifi-speed.sh"
label = %output:35:35%
tail = false

[module/gpu_intel]
type = custom/script
exec = sudo intel_gpu_frequency | awk '/cur/ {print $2}'
label = %output:3:3%
format-prefix = " "
format-prefix-foreground = ${colors.yellow}
format-suffix = "Mhz"
tail = false
interval = 0.5

[module/sound]
type = custom/script
exec = ". $USERSCRIPT/rofi-widgets/widgets/pulse-audio.sh && pulse_get_devices_polybar"
click-left = ". $USERSCRIPT/rofi-widgets/widgets/pulse-audio.sh && pulse_set_devices_rofi"
tail = false
interval = 5

[module/volume_alsa]
type = internal/volume
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default
label-volume = ""
format-volume-foreground = ${colors.foreground}
format-volume = <label-volume> <bar-volume>
label-muted = ""
format-muted-foreground = ${colors.foreground}
format-muted = <label-muted> <bar-volume>
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.blue}
bar-volume-foreground-1 = ${colors.blue}
bar-volume-foreground-2 = ${colors.blue}
bar-volume-foreground-3 = ${colors.yellow}
bar-volume-foreground-4 = ${colors.yellow}
bar-volume-foreground-5 = ${colors.red}
bar-volume-foreground-6 = ${colors.red}
bar-volume-gradient = false
bar-volume-indicator = " "
bar-volume-indicator-font = 1
bar-volume-fill = ""
bar-volume-fill-font = 1
bar-volume-empty = " "
bar-volume-empty-font = 1
bar-volume-empty-foreground = ${colors.foreground}

