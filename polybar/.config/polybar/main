compositing-overline = over
compositing-underline = over
compositing-border = over

[module/i3]
type = internal/i3
index-sort = true
fuzzy-match = true
format-prefix=${c.ls}
format-suffix=${c.delim}
format = %{O-2}%{F#47959E}<label-mode>%{F#ccc}<label-state>
label-focused-font = 4
label-unfocused-font = 4
label-urgent-font = 4
label-visible-font = 4 
label-unfocused=
label-urgent = ÔÅ±
label-urgent-padding = 1
label-visible-padding = 1
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.urgent}

[module/mpd]
type = internal/mpd
interval = 1
format-online = <label-song> <label-time>
format-playing = ${self.format-online}
format-playing-prefix = ${self.lmpd}
format-playing-suffix = ${c.rs}
format-paused = "%{F#395573}‚ü¨%{O5}%{F#005f87}||%{F#395573} %{F#ccc}"
format-paused-suffix = ${c.rs}
format-stopped = 
format-offline = no mpd
label-song = %artist% ‚Äï %title%
label-time = %elapsed%%{F#395573}/%{F#ccc}%total%
icon-random = üîÄ
icon-repeat = üîÅ
icon-repeatone = üîÇ
icon-consume = ‚úÄ
lmpd="%{F#395573}‚ü¨%{O5}%{F#005f87}‚å™%{F#005fd7}‚å™%{F#395573} %{F#ccc}"
lmpd1="%{F#395573}‚ü¨‚å¨%{F#005f87}‚å™%{F#005fd7}‚å™%{F#395573} %{F#ccc}"
lmpd2="%{F#395573}‚å¨%{F#005f87}‚å™%{F#005fd7}‚å™%{F#395573} %{F#ccc}"

[module/volume]
type = custom/script
interval = 0
exec = /home/neg/bin/mon/vol.lua
exec-if = mpc idle

[module/date]
type = internal/date
format-prefix=${c.l}
format-suffix=${c.delim}
date = %H:%M%
interval = 5
format-padding = 0

[module/checkvpn]
type = custom/script
format-padding = 2
exec = pgrep openvpn
interval = 5
label = "ÔÉ¨ vpn"

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
 
format-prefix = ${c.l}
format-suffix = ${c.delim}
 
label-layout = input:%{O5}%layout%
label-indicator-padding = 0
label-indicator-background = ${colors.background}
label-indicator-underline = ${colors.background}

[module/network]
type = internal/network
interface = enp6s0
interval = 1.0
accumulate-stats = false
label-connected = net:%{O5}%downspeed%%{F#395573}/%{F#ccc}%upspeed%
format-connected-prefix=${c.l}
format-connected-suffix=${c.rs}

[module/mail]
type = custom/script
exec = ~/bin/mon/mail_count
format-prefix = ${c.deliml}
format-suffix = ${c.r}
format = <label>
interval = 180

[c]
l="%{O5}"
r="%{O5}"
ls=
rs=

lspec="%{F#395573}‚ü¨ %{F#ccc}"
rspec="%{F#395573}‚ü≠ %{F#ccc}"
delim="%{F#005f87}%{O5}‚à£%{F#ccc}"
deliml="%{F#005f87}%{O5}‚à£%{F#ccc}%{O5}"

[module/LL]
