[global/wm]
margin-top = 0
margin-bottom = 0

[colors]
white = ${xrdb:color15}
gray = ${xrdb:color8}
black = ${xrdb:color0}
blue = ${xrdb:color4}
green = ${xrdb:color2}
background = #bb020209

border = #1f3b4f
urgent = #9633A7

[bar/main]
monitor=HDMI2
bottom=true

border-top-size = 2
border-top-color = ${xrdb:color17}

height = 24
spacing = 0
width = 100%
enable-ipc = true

padding-left  = 0 # offset from x
padding-right = 0 # offset from -x

module-margin-right = 0; looks nice
module-margin-left  = 0

modules-left = date i3 xkeyboard network checkvpn mail
modules-center =
modules-right = mpd 

background = ${colors.background}
foreground = ${colors.white}

underline-size = 1

font-0 = Iosevka Term Heavy:weight=bold:size=12;3
font-1 = PragmataPro for Powerline:weight=bold:size=12;4

#font-0 = Iosevka Term Heavy:weight=bold:size=12;2
#font-1 = PragmataPro for Powerline:weight=bold:size=12;3

tray-detached = false
tray-position = right
tray-offset-x = 1
tray-padding = 1
tray-maxsize = 16
tray-background = #000000

; Compositing operators
; @see: https://www.cairographics.org/manual/cairo-cairo-t.html#cairo-operator-t
compositing-background = over
compositing-foreground = over
compositing-overline = over
compositing-underline = over
compositing-border = over

[c]
l = "%{F#287373}[ "
r = "%{F#287373} ]"
ls = "%{F#287373}["
rs = "%{F#287373}]"

[module/i3]
type = internal/i3
format-underline = ${colors.border}
index-sort = true
fuzzy-match = true
format-prefix = ${c.ls}
format-suffix = ${c.r}
format = %{F#fff}%{F#47959E}<label-mode> %{F#fff}<label-state>

label-focused-font = 4
label-unfocused-font = 4
label-urgent-font = 4
label-visible-font = 4 

label-unfocused=
label-unfocused-padding = 1
label-unfocused-underlinde = ${colors.white}

label-urgent = 
label-urgent-padding = 1
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.urgent}
label-visible-foreground = ${colors.white}
label-visible-padding = 1

[module/date]
type = internal/date
format-prefix = ${c.l}
format-suffix = ${c.r}
date = %{F#fff}%H:%M%
interval = 5
format-underline = ${colors.border}
format-foreground = ${colors.white}
format-padding = 0

[module/checkvpn]
type = custom/script
format-padding = 2
exec = pgrep openvpn
interval = 5
label = " vpn"
format-background = #783e57
format-underline = #a45476

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
 
format-underline = ${colors.border}
format-prefix = ${c.l}
format-prefix-foreground = ${colors.white}
format-suffix = ${c.r}
 
label-layout = %{F#fff}input: %layout%
label-indicator-padding = 0
label-indicator-background = ${colors.blue}
label-indicator-underline = ${colors.blue}

[module/mpd]
type = custom/script
exec = ~/bin/mon/mpd.lua
format-underline = ${colors.border}
interval = 0.05

[module/network]
type = custom/script
exec = USE_POLYBAR=1 ~/bin/mon/network_speed.sh
tail = true
label = %output:0:128:...%
format-prefix = ${c.l}
format-suffix = ${c.rs}
format = %{F#fff}<label>
format-underline = ${colors.border}
interval = 0

[module/mail]
type = custom/script
exec = ~/bin/mon/mail_count
format-prefix = ${c.l}
format-suffix = ${c.r}
format = %{F#fff}<label>
format-underline = ${colors.border}
interval = 180

; vim:ft=dosini
