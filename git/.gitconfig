[user]
    email = serg.zorg@gmail.com
    name = Neg
[core]
    pager =
    whitespace = trailing-space,cr-at-eol
    excludesfile = /etc/gitignore
	editor = nvim
[color]
    branch     = auto
    diff       = 1
    grep       = auto
    pager      = 0
    showbranch = auto
    status     = auto
    ui = auto
[color "status"]
    added     = 2 bold
    branch    = 100
    changed   = 4 bold
    header    = 23
    nobranch  = 197
    untracked = 240
[color "branch"]
    current = 23
    local   = 18 bold
    remote  = 17
[color "diff"]
    old        = 1
    new        = 23
    plain      = 7
    meta       = 18
    frag       = 67
    func       = 68
    commit     = 4
    whitespace = 54
[man]
    viewer = man
[receive]
    denyCurrentBranch = ignore
[alias]
    last = "!git log -7 HEAD --abbrev-commit --date=short --pretty=format:'%h%x00%cd%x00%s%x00%an%x00%d' $@ | gawk -F '\\0' '{ printf \"\\033[31m%s\\033[m \\033[32m%s\\033[m  %-.40s \\033[30;1m%s\\033[m\\033[33m%s\\n\", $1, $2, gensub(/(.{49}).{2,}/, \"\\\\1â€¦\",\"g\",$3), $4, $5 }';"
    co   = checkout
    ci   = commit
    st   = status
    pu   = push
    pl   = pull
    wtf   = "!~/bin/git/git-wtf"
    undo = checkout --
    log1 = log --
    whatthefuckdidido = diff HEAD
    sum  = git-summary
    effort  = git-summary
    styoyo = git-awesome-status
    l  = log --graph --pretty=format:'%C(Yellow)%h %C(Cyan)%ad %C(White)%s%C(Green)%d %C(Blue)[%an]' --date=short
    gcc = -c gc.reflogExpire=0 -c gc.reflogExpireUnreachable=0 -c gc.rerereresolved=0 -c gc.rerereunresolved=0 -c gc.pruneExpire=now gc
    d = difftool
[github]
	user = neg-serg
[push]
    default = simple
[diff]
	tool = ~neg/bin/scripts/wdiff_standalone
	compactionHeuristic = true
	indentHeuristic = on
[difftool]
	prompt = false
[merge]
	tool = ~neg/bin/scripts/wdiff_standalone
[mergetool]
    prompt = false
    tool = vimdiff
; [mergetool "vimdiff"]
;     cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[credential]
    helper = cache --timeout=28800
[interactive]
	diffFilter = diff-highlight
[diff "exif"]
	textconv = exiftool
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
