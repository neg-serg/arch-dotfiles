#!/usr/bin/env sh
main() {
    for arg in "$@"; do
        [ -d "$arg" ] && find "$arg" -maxdepth 1 -type f -print0 | xargs -0n10 -P 10 vid-info &
    done
    {
        args=""
        for arg in "$@"; do
            [ -f "$arg" ] && args="$args$(printf '%s' "$arg")";
        done
        command echo -n "$args" | xargs -0n10 -P 10 vid-info
    } &
    mpv --vo=gpu --quiet "$@" > "$HOME/tmp/mpv.log"
}

main "$@"
