#!/bin/dash
main() {
    for arg in "$@"; do
        if [ -d "$arg" ]; then
            {
                find "$arg" -maxdepth 1 -type f -print0 | \
                    xargs -0n10 -P 10 ~/bin/scripts/vid_info
            } &
        fi
    done
    {
        args=""
        for arg in "$@"; do
            [ -f "$arg" ] && args="$args$(printf '%s\0' "$arg")";
        done
        echo -n "$args" | xargs -0n10 -P 10 ~/bin/scripts/vid_info
    } &
    mpv --input-ipc-server=/tmp/mpvsocket --vo=gpu "$@" > $HOME/tmp/mpv.log
}

main "$@" 2>/dev/null
