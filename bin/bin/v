#!/usr/bin/env dash
if [ ! -z $DISPLAY ]; then
    $XDG_CONFIG_HOME/negi3wm/bin/send circle next nwim
    while ! xdotool search --sync --all --class '^nwim$' 2>&1 > /dev/null; do
        :;
    done
fi
nvr --servername /tmp/nvimsocket """$@"""
if echo $TMUX | grep "nwim.socket" > /dev/null && [ $(tmux list-panes | wc -l) -gt 1 ]; then
    tmux killp
fi
