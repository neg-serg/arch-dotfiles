#!/usr/bin/env dash
if [ ! -z $DISPLAY ]; then
    $XDG_CONFIG_HOME/negwm/bin/send circle next nwim
    while ! xdotool search --sync --all --class '^nwim$' 2>&1 > /dev/null; do
        :;
    done
fi
nvr --servername localhost:7777 +':if &buftype == "terminal" | :quit | :endif'
nvr --servername localhost:7777 """$@"""
