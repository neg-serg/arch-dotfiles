#!/bin/dash
find "$@" \
    -type f \
    -iregex '.*.\(jpg\|jpe\|jpeg\|png\|gif\|webp\)' \
    -printf '%C@ %p\n' \
    | sort -rn --parallel 8 -S 16M \
    | cut -d ' ' -f 2- \
    | xargs file --mime-type 2> /dev/null | grep -F 'image/' | cut -d ':' -f 1 \
    | xargs -d '\n' -r sxiv -Zftoa -sd 2> ~/tmp/sxiv.log
