#!/usr/bin/env sh
case "$1" in
    start) 
        echo start
        systemctl --user stop picom # Disable compositor
        nvidia-settings --assign CurrentMetaMode="DP-0: 3840x2160_120 +0+0 {ForceCompositionPipeline=Off, AllowGSYNCCompatible=On}, HDMI-0: nvidia-auto-select +0+0 {ForceCompositionPipeline=Off}"
        xrandr --output HDMI-1 --off #Disable 2ยบ screen
    ;;
    end) 
        echo end
        xrandr --output HDMI-0 --auto # Re-enable 2ยบ screen
        # Re-enable composition pipeline
        nvidia-settings --assign CurrentMetaMode="DP-0: 3840x2160_120 +0+0 {ForceCompositionPipeline=On, AllowGSYNCCompatible=On}, HDMI-0: nvidia-auto-select +0+0 {ForceCompositionPipeline=On}"
        systemctl --user start picom # Re-enable your compositor
    ;;
    *) true ;;
esac
