#!/usr/bin/env zsh
body="$3"
urgency="$5"
dunst_pics="$(realpath ${HOME}/tmp/dunst-images)"
cover_lock="${dunst_pics}/notify.lock"
image="/tmp/.mpd-notification-artwork.png"
magic_pie='8143'
max_len=35
mpd_music_dir="$(awk '/music_directory/{print $2}' ${XDG_CONFIG_HOME}/mpd/mpd.conf|tr -d '"'|sed 's:^~:'${HOME}':')"
nr(){
    print "<span weight='Bold' color='#b8c5d9'>$1</span>"
}
fa(){
    print "<span color=\'$1\' font-family = 'Font Awesome 6 Pro'>"
}
E(){
    print '</span>'
}
prefix=(
    ''                        # track name    [1]
    "$(fa '#004E4E')   $(E)" # artist        [2]
    "$(fa '#004E4E')   $(E)" # album         [3]
    "$(fa '#004E4E')   $(E)" # ????          [4]
    "$(fa '#004E4E')   $(E)" # audio_quality [5]
    "$(fa '#004E4E')   $(E)" # label         [6]
    "$(fa '#004E4E')   $(E)" # year          [7]
)
delimiter() {
    repeat ${len} print -n "◇"
}
cmp_img() {
    ${HOME}/bin/scripts/cmp-imgs.py "${1}" "${2}"
}

notify() {
    bodyarr=()
    len=()
    while read line; do
        bodyarr+="${line}"
    done <<< ${body}
    for i in {1..6}; do
        len+=${#bodyarr[$i]};
    done
    len=($(printf "%s\n" "${len[@]}"|sort -nr))
    len=$[${(@)len[1]}]
    [[ ${len} > ${max_len} ]] && len=${max_len}

    bodyarr[1]=''
    for i in {2..5}; do
        if [[ ! -z "${bodyarr[i]}" ]]; then
            bodyarr[i]="${prefix[i]}$(nr ${bodyarr[i]})\n"
        else
            bodyarr[i]="\n"
        fi
    done

    current_file="$(mpc -f '%file%'|head -1)"
    current_dirname="${mpd_music_dir}/$(dirname "${current_file}")"
    sox_metadata="$(sox --i "${mpd_music_dir}/${current_file}" 2> /dev/null)"
    audio_quality="$(awk -F '\\s*:\\s*' \
        'BEGIN {} /^Channels/{ch=$2} \
        /^Sample Encoding/{se=$2} \
        /^Bit Rate/{br=$2} \
        /^Sample Rate/{sr=$2/1000} \
        /^Precision/{pr=$2} \
    END { \
    if (se ~ /FLAC/) printf "FLAC·"; \
    if (se ~ /MPEG/) printf "mpeg·"; \
    if (se ~ /Direct Stream Digital/) printf "dsd·"; \
        print br"·"sr"K/"pr"·"ch}' <<< ${sox_metadata})"

    year="$(awk -F '=' '/^YEAR/{print $2}' <<< ${sox_metadata})"
    label="$(awk -F '=' '/^LABEL/{print $2}' <<< ${sox_metadata})"
    [[ ${audio_quality// } != "·K/·" ]] && bodyarr[5]="${prefix[5]}$(nr ${audio_quality})\n" || bodyarr[5]="\n"
    [[ ! -z "${label// }" ]] && bodyarr[6]="${prefix[6]}$(nr ${label})\n" || bodyarr[6]="\n"
    [[ ! -z "${year// }" ]] && bodyarr[7]="${prefix[7]}$(nr ${year})\n" || bodyarr[7]="\n"

    for i in ${bodyarr[@]};
        [[ ${i} != "\n" ]] && output="${output}${i}"

    output="$(delimiter)\n${output}$(delimiter)\n​"
    summary=""
    dunstify -p -a "mpd" -h "string:fgcolor:#17272D" \
        -u "${urgency}" \
        -i "${image}" "${summary}" "${output}" > /tmp/notify_id \
        -r ${magic_pie}
    sleep 2s
    sed '1d' <<< $(echo -n "${body}") > "${cover_lock}"
}

debug(){
    echo ":: BODY ::"
    print "$body"
    echo
    echo ":: BODY_ARR ::"
    print "$bodyarr"
    echo
}

show_notify() {
    if [[ ! -f "${cover_lock}" ]]; then
        notify
    elif [[ -s "${cover_lock}" ]]; then
        if [[ "$(< "${cover_lock}")" != "$(sed '1d' <<< $(echo -n "${body}"))" ]]; then
            notify
        fi
    fi
    cp "${image}" "${prev}"
}

zshexit() {
    (
        hashsum1=$(xxh32sum "${image}"|cut -d ' ' -f1)
        sleep 4s
        hashsum2=$(xxh32sum "${image}"|cut -d ' ' -f1)
        [[ ${hashsum1} = ${hashsum2} ]] && rm -f ${image}
    ) &
}

main() {
    dunstify -C "$(< /tmp/notify_id)" -r ${magic_pie}
    [[ ! -d "${dunst_pics}" ]] && mkdir -p "${dunst_pics}"
    prev="${dunst_pics}/prev.png"
    fd prev.png --changed-before '12min' -x rm '{}'
    if [[ -f ${image} ]]; then
        [[ ! -d "${dunst_pics}" ]] && mkdir -p "${dunst_pics}"
        # send notification with compatible image
        if [[ ! -f "${prev}" ]]; then
            show_notify
        else
            local dunst_picslist=$(setopt nullglob dotglob; print "${dunst_pics}"/*)
            if [[ $(cmp_img "${image}" "${prev}") == "False" ]] \
                && (( ${#dunst_picslist[@]} > 1 )); then
                show_notify
            fi
        fi
    fi
}

main "$@"
