#!/bin/sh
cat >/etc/vconsole.conf <<EOF
FONT=Lat2-Terminus16.psfu.gz
FONT_MAP=8859-2
EOF

{
	printf '\033[H\033[2J\n'
	printf '                                                            \033[1;30m| \033[34m\\s \\r\n'
	printf '       \033[36;1m/\\\\                      \033[37m||     \033[36m| |                   \033[30m|\n'
	printf '      \033[36m/  \\\\                     \033[37m||     \033[36m|     _               \033[30m| \033[32m\\t\n'
	printf '     \033[1;36m/ \033[0;36m.. \033[1m\\\\   \033[37m//==\\\\\\\\ ||/= /==\\\\ ||/=\\\\  \033[36m| | |/ \\\\ |  | \\\\ /     \033[30m| \033[32m\\d\n'
	printf '    \033[0;36m/ .  . \\\\  \033[37m||  || ||   |    ||  || \033[36m| | |  | |  |  X      \033[1;30m|\n'
	printf '   \033[0;36m/  .  .  \\\\ \033[37m\\\\\\\\==/| ||   \\\\==/ ||  || \033[36m| | |  | \\\\_/| / \\\\     \033[1;30m| \033[31m\\U\n'
	printf '  \033[0;36m/ ..    .. \\\\   \033[0;37mA simple, lightweight linux distribution.  \033[1;30m|\n'
	printf ' \033[0;36m/_\         `_\\\\                                             \033[1;30m| \033[35m\\l \033[0mon \033[1;33m\\n\n'
	printf ' \033[0m\n\n'
} >/etc/issue
