#!/bin/zsh

set -e

typeset -A conv_table

trim() {
    local var="$@"
    # remove leading whitespace characters
    var="${var#"${var%%[![:space:]]*}"}"
    # remove trailing whitespace characters
    echo -n "${var%"${var##*[![:space:]]}"}"
}

generate_convert_table() {
    for i in {900..989}; do
        q=${i:1:5}
        conv_table[1$i]="1x${q}"
    done

    for i in {990..999}; do
        q=${i:2:5}
        conv_table[1$i]="1x${q}"
    done

    i="000"
    num=$(sed "s/^000/0/" <<< "${i}")
    conv_table[2$i]="2x${num}"
    for i in {001..035}; do
        num=$(sed "s/^0*//" <<< "${i}")
        if [[ ${num} -lt 10 ]]; then
            conv_table[2$i]="2x${num}"
        else
            j=10
            for q in {A..Z}; do
                if [[ $j == $num ]]; then
                    conv_table[2$i]="2x${q}"
                fi
                ((j++))
            done
        fi
    done
}

apply_rename_files() {
    Data=$(albumdetails "$@")
    apply_rename_ "$@"
}

apply_rename_dir() {
    Data=$(find "${1}" -exec albumdetails '{}' + 2>/dev/null)
    apply_rename_ "$@"
}

extract_field() {
    grep "^$1:" <<< "${Data}" | cut -d ':' -f 2-
}

apply_rename_() {
    artist="$(extract_field 'Artist')"
    year="$(extract_field 'Year')"

    generate_convert_table

    # take only first word from year
    year=$(awk '{print $1}' <<< "${year}")
    year=${year//$year/$conv_table[$year]}

    album="$(extract_field 'Album')"

    if [[ -d "${1}" ]]; then
        src="${1}"
    else
        src="$(builtin print "$(dirname ${1})")"
    fi

    artist=$(trim "${artist}")
    album=$(trim "${album}")
    year=$(trim "${year}")
    lhs='-⟨'
    rhs='⟩-'

    if [[ ${artist} != "" && ${year} != "" && ${album} != "" ]]; then
        music_dirname="$(awk '/music_directory/{print $2}' "${HOME}/.mpd.conf"|tr -d '"'|sed 's:^~:'${HOME}':')"
        result="${music_dirname}/$(basename "$(sed 's;/;·;g' <<< "${artist}${lhs}${year}${rhs}${album}")")"
        if [[ $(readlink -f "${src}") != $(readlink -f "${result}") ]]; then
            mv -i "${src}" "${result}"
        fi
        fix_names -i "${result}"
        rmdir "${src}" 2> /dev/null
    fi
}

main(){
    case "${1}" in
        c*)
            dirname="$(awk '/music_directory/{print $2}' "${HOME}/.mpd.conf"|tr -d '"'|sed 's:^~:'${HOME}':')/$(dirname "$(mpc -f '%file%'|head -1)")"
            apply_rename_dir "${dirname}"
        ;;
        f*)
            shift
            apply_rename_files "$@"
        ;;
        *)
            for dir; apply_rename_dir "${dir}"
        ;;
    esac
}

main "$@"
