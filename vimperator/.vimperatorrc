set verbose=0
set gui=none
colorscheme neg

set defsearch=google
set suggestengines=google

set hintchars=12345
set hintmatching=fuzzy
set status=location,bookmark,input,history,tabcount,position,ssl
set complete=hS
set focuscontent=false
set animations=false

set maxitems=12
set shell='/bin/zsh'
set shellcmdflag='-c'

set titlestring="[-= vimperator =-]"
set history=9000

command nonblock -description "disable addblock edge for current page" emenu Tools.Adblock Edge.Disable on this page only
command! -nargs=* gg open google <args>
command! morehints :set hinttags="//*[@onclick or @onmouseover or @onmousedown or @onmouseup or @oncommand or @class='lk' or @class='s' or @class='lk cs' or @class='msc' or @class='ll'] | //input[not(@type='hidden')] | //a | //area | //iframe | //textarea | //button | //select | //xhtml:*[@onclick or @onmouseover or @onmousedown or @onmouseup or @oncommand or @class='lk' or @class='s'] | //xhtml:input[not(@type='hidden')] | //xhtml:a | //xhtml:area | //xhtml:iframe | //xhtml:textarea | //xhtml:button | //xhtml:select | //tr[@class='rr' or @class='ur']/td[position()=5]"

source ~/.vimperator/1st_level/styles.vimp
source ~/.vimperator/1st_level/maps.vimp
source ~/.vimperator/1st_level/qmarks.vimp
source ~/.vimperator/1st_level/firefox.vimp
