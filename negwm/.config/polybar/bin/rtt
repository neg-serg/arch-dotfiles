#!/usr/bin/env sh
HOST=mail.ru
if ! ping=$(ping -n -c 1 -W 1 $HOST 2>/dev/null); then
    echo "%{F#5C0100}#%{F-}"
else
    rtt=$(echo "$ping" | sed -rn 's/.*time=([0-9]{1,})\.?[0-9]{0,} ms.*/\1/p')
    if [ "$rtt" -lt 50 ]; then
        icon="%{F#005f87}/"
    elif [ "$rtt" -lt 150 ]; then
        icon="%{F#287373}/"
    else
        icon="%{F#5C0100}/"
    fi
    echo "$icon%{F-}${rtt}%{F#607794}ms"
fi
