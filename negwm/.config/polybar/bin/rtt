#!/usr/bin/env dash
HOST=mail.ru
if ! ping=$(ping -n -c 1 -W 1 $HOST); then
    echo "# ping failed"
else
    rtt=$(echo "$ping" | sed -rn 's/.*time=([0-9]{1,})\.?[0-9]{0,} ms.*/\1/p')
    if [ "$rtt" -lt 50 ]; then
        icon="%{F#287373}/"
    elif [ "$rtt" -lt 150 ]; then
        icon="%{F#f9dd04}/"
    else
        icon="%{F#d60606}/"
    fi
    echo "$icon%{F-}${rtt}%{F#607794}ms"
fi
