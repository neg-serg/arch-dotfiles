[Unit]
Description=Xorg
Documentation=man:Xorg(1)
Requires=x11.socket
After=x11.socket
Before=x11.target

[Service]
Environment=XDG_SESSION_TYPE=x11
Environment="XSERVERRC=%E/xinit/xserverrc"
ExecStart=/etc/profiles/per-user/neg/bin/xinit /etc/profiles/per-user/neg/bin/i3 -- :0
SuccessExitStatus=0 1

[Install]
Also=x11.socket x11.target
WantedBy=default.target
