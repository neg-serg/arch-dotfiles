[Unit]
Description=XSETTINGS daemon
PartOf=graphical-session.target
After=x11.service
Requires=x11.service

[Service]
Type=oneshot
Restart=on-failure
ExecStart=%h/bin/xsettingsd-setup
ExecReload=%h/bin/xsettingsd-setup
ExecReload=/usr/bin/kill -HUP $MAINPID
ExecReload=-/usr/bin/i3-msg restart
ExecReload=/bin/systemctl --user try-restart polybar.service
ExecReload=/bin/systemctl --user try-reload picom.service
